<!--        </root>-->

        <!-- FATAL > ERROR > WARN > INFO > DEBUG > TRACE -->
        <logger name="WEB_BOUNDRY_LOG" level="INFO" additivity="false">
            <appender-ref ref="WEB_BOUNDRY_LOG" />
        </logger>

        <logger name="API_BOUNDRY_LOG" level="INFO" additivity="false">
