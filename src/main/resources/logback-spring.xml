    <!-- Default logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="SYSLOG" />
    </root>

    <!-- Custom logger per class if needed -->
    <!-- Log requests and responses -->
    <logger name="org.springframework.web" level="DEBUG"/>

    <springProfile name="dev,test,local-h2,local-psql">
